       <mo>.</mo>
       <mo>%</mo>
      </mrow>
      <mo>)</mo>
     </mrow>
     <mo>=</mo>
     <mfrac>
      <mrow>
       <msub>
        <mi>W</mi>
        <mrow>
         <mi>ext</mi>
        </mrow>
       </msub>
      </mrow>
      <mrow>
       <msub>
        <mi>W</mi>
        <mn>0</mn>
