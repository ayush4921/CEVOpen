      <mi mathvariant="sans-serif">β</mi>
     </mrow>
     <mo>=</mo>
     <mfrac>
      <mrow>
       <mn>20</mn>
       <mo>×</mo>
       <mrow>
        <mi>Insulin</mi>
        <mo> </mo>
       </mrow>
       <mrow>
        <mo>(</mo>
        <mrow>
         <mi mathvariant="normal">U</mi>
