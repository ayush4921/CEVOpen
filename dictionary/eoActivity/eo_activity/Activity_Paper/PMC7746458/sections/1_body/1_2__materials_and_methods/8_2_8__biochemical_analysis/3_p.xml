        <msup>
         <mrow>
          <mtext>Na</mtext>
         </mrow>
         <mrow>
          <mo>+</mo>
         </mrow>
        </msup>
        <mtext> level in the same test group</mtext>
       </mrow>
       <mrow>
        <mtext>Urinary </mtext>
        <msup>
         <mrow>
          <mtext>K</mtext>
         </mrow>
         <mrow>
          <mo>+</mo>
          <mtext> </mtext>
         </mrow>
        </msup>
        <mtext> level in the same test group</mtext>
       </mrow>
      </mfrac>
      <mo>,</mo>
     </mtd>
    </mtr>
   </mtable>
  </math>
 </disp-formula>
