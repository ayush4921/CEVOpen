    <td rowspan="1" colspan="1">16</td>
    <td rowspan="1" colspan="1">
     <italic>Schisandra chinensis</italic> (Turcz.) Baill.
    </td>
    <td rowspan="1" colspan="1">Magnoliaceae</td>
    <td rowspan="1" colspan="1">Fruit</td>
    <td rowspan="1" colspan="1">Petroleum ether and EtOAc extract</td>
    <td rowspan="1" colspan="1">Effects on HIV-1 RT and viral replication.</td>
    <td rowspan="1" colspan="1">[
     <xref rid="cit0024" ref-type="bibr">24</xref>]
