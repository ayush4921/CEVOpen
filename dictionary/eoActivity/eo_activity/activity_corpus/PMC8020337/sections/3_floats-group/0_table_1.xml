   <tr>
    <td rowspan="1" colspan="1">17</td>
    <td rowspan="1" colspan="1">
     <italic>Acacia nilotica</italic>
    </td>
    <td rowspan="1" colspan="1">Fabaceae</td>
    <td rowspan="1" colspan="1">Leaves</td>
    <td rowspan="1" colspan="1">Methanol extract</td>
    <td rowspan="1" colspan="1">To substantiate strong antiviral activity against HCV.</td>
