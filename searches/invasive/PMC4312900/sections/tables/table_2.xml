    <td align="left" rowspan="1" colspan="1">EC[
     <italic>r + </italic>2
     <italic>d, d, t + </italic>1,
     <italic>t + s</italic>]
    </td>
    <td align="left" rowspan="1" colspan="1">CC[
     <italic>r, d,</italic> 1,
     <italic>t</italic>]
    </td>
    <td align="left" rowspan="1" colspan="1">+</td>
