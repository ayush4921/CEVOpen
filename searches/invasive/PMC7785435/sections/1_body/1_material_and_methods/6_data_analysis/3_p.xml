          <mi>y</mi>
         </mrow>
         <mrow>
          <mi mathvariant="italic">outside</mi>
          <mspace width="5.0pt"/>
          <mi>c</mi>
          <mi>a</mi>
          <mi>n</mi>
          <mi>o</mi>
          <mi>p</mi>
          <mi>y</mi>
         </mrow>
        </msub>
       </mrow>
      </mfenced>
     </mrow>
     <mrow>
      <mfenced close=")" open="(">
       <mrow>
        <msub>
         <mrow>
          <mi mathvariant="italic">Species</mi>
          <mspace width="5.0pt"/>
